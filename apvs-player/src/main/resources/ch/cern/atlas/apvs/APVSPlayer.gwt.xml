<?xml version="1.0" encoding="UTF-8"?>

<module rename-to="apvsplayer">

<!-- 
	<inherits name='elemental.Elemental' />
	<inherits name="com.kiouri.sliderbar.SliderBarMVP" />
-->
	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.google.gwt.core.Core' />
<!--
	<inherits name='com.google.gwt.activity.Activity' />
	<inherits name='com.google.gwt.place.Place' />
-->
	<inherits name="com.google.gwt.http.HTTP" />
	<inherits name="com.google.gwt.logging.Logging" />
	<inherits name="com.google.gwt.json.JSON" />
	<inherits name="com.google.gwt.resources.Resources" />
<!--
	<inherits name="com.google.web.bindery.autobean.AutoBean" />
-->
	<set-property name="gwt.logging.logLevel" value="FINEST" />
	<set-property name="gwt.logging.enabled" value="TRUE" />
	<set-property name="gwt.logging.developmentModeHandler"
		value="ENABLED" />
	<set-property name="gwt.logging.systemHandler" value="DISABLED" />
	<set-property name="gwt.logging.popupHandler" value="DISABLED" />
	<set-property name="gwt.logging.consoleHandler" value="ENABLED" />
	<set-property name="gwt.logging.firebugHandler" value="ENABLED" />

	<inherits name="org.slf4j.Slf4j" />
	<inherits name="com.github.gwtbootstrap.Bootstrap" />
	<set-property name="bootstrap.responsiveDesign" value="true" />

	<inherits name="org.moxieapps.gwt.highcharts.Highcharts" />

	<!-- inherit css based theme -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />

	<stylesheet src='../APVSPlayer.css' />

	<set-property name="locale" value="default" />
	<set-property name="gwt.logging.logLevel" value="FINEST" />
	<set-property name="gwt.logging.popupHandler" value="DISABLED" />

	<set-property name="compiler.stackMode" value="emulated" />
	<set-configuration-property name="compiler.emulatedStack.recordLineNumbers"
		value="true" />
	<set-configuration-property name="compiler.emulatedStack.recordFileNames"
		value="true" />

	<add-linker name="xsiframe"/>
	<set-configuration-property name="devModeRedirectEnabled" value="true"/>
	<set-property name="compiler.useSourceMaps" value="true" />

	<source>player</source>

	<entry-point class='ch.cern.atlas.apvs.player.APVSPlayer' />
</module>
